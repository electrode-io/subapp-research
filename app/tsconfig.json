{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "createElement",
    "outDir": "lib",
    "lib": ["es2018"],
    "module": "commonjs",
    "esModuleInterop": false,
    "target": "ES2018",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node", "react", "react-dom"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "moduleResolution": "node"
  },
  "include": ["src"]
}
