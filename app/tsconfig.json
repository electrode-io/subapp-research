{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "lib",
    "lib": ["es2018"],
    "module": "es2020",
    "esModuleInterop": false,
    "target": "ES2018",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "moduleResolution": "node"
  },
  "include": ["src"]
}
