{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "h",
    "outDir": "dist~es5~esm~",
    "lib": ["es2018"],
    "module": "es2020",
    "esModuleInterop": false,
    "target": "ES5",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "moduleResolution": "node"
  },
  "include": ["src"]
}
